<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_resources_list"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/oval_white_list_layout_background">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/oval_list_heading_top_white_layout">
        <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/list_subheading_letter"
            android:textSize="18sp"
            android:text="RESOURCES"/>
        <!--<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/oval_gray_layout_background">
            <EditText
                android:id="@+id/middle_search"
                android:layout_width="fill_parent"
                android:layout_height="16dp"
                android:textColorHint="@color/search_hint_color"
                android:hint="Search"/>
        </LinearLayout>-->
        <EditText
            android:id="@+id/resource_search"
            android:layout_width="fill_parent"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/oval_gray_layout_background"
            android:textColor="@color/table_heading_letters_color"
            android:hint="Search"/>
    </LinearLayout>
</LinearLayout>