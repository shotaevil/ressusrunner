    <TextView
        android:id="@+id/yes_pulse"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:lines="3"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:text="@string/yes_pulse_desc" />
    <LinearLayout
        android:id="@+id/no_pulse_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_no_pulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/compression"
            android:textSize="18sp"
            android:lines="2"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_no_pulse_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/compression_desc" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/compresion"/>
    </LinearLayout>
</LinearLayout>