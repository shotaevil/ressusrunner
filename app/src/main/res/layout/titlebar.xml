<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="56dp"
    android:gravity="center"
    android:background="@color/blue_main">
    <LinearLayout
        android:id="@+id/layout_overflow"
        android:layout_alignParentLeft="true"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="5dp"
        android:background="@color/navy_blue"
        android:onClick="OpenSideMenu"
        android:gravity="center">
        <TextView
            android:layout_gravity="center"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/menu_lines"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/logo"
        android:layout_toRightOf="@id/layout_overflow"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:src="@drawable/logo"/>
    <Button
        android:id="@+id/end_code_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_code"
        android:onClick="EndCode"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"
        android:background="@drawable/red_rectangle_button"/>
</RelativeLayout>